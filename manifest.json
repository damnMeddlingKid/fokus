{

    "manifest_version": 2,
    "name": "Fokus",
    "version": "1.8",

    "browser_specific_settings": {
      "gecko": {
        "id": "{738041f6-fdc8-4cfd-ab12-412ea748ca60}"
      }
    },
  
    "description": "Allows quick banning of websites.",
  
    "icons": {
      "48": "icons/off.svg",
      "96": "icons/off.svg"      
    },

    "browser_action": {
        "default_icon": "icons/off.svg",
        "default_title": "Fokus",
        "default_popup": "popup/add.html"
    },

    "web_accessible_resources": [
      "popup/no.html"
    ],
    
    "background": {
        "page": 
          "fokus.html" 
        
    },
    
    "permissions": [
      "<all_urls>", 
      "tabs",
      "activeTab",  
      "storage", 
      "webRequest",
      "webNavigation", 
      "webRequestBlocking"]
  }